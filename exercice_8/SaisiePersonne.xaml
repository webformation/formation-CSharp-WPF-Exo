<Window x:Class="exercice_8.SaisiePersonne"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:exercice_8"
        mc:Ignorable="d"
        Title="SaisiePersonne" Height="450" Width="800">
    <Window.Resources>
        <local:AgeConverter x:Key="AgeConverter"/>
    </Window.Resources>
    <Grid>
        <TextBox Text="{Binding Nom}" Name="nom" HorizontalAlignment="Left" Height="26" Margin="108,59,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="171"/>
        <DatePicker SelectedDate="{Binding date_naissance }" Name="dateNaissance" HorizontalAlignment="Left" Margin="108,142,0,0" VerticalAlignment="Top"/>
        <Button Content="Valider" HorizontalAlignment="Left" Margin="100,238,0,0" VerticalAlignment="Top" Width="110" Height="31" Click="Button_Click"/>
        <Button Name="Afficher" Content="Afficher" HorizontalAlignment="Left" Height="31" Margin="100,288,0,0" VerticalAlignment="Top" Width="121" Click="Button_Click1"/>
        <Label Content="Nom" HorizontalAlignment="Left" Height="24" Margin="10,59,0,0" VerticalAlignment="Top" Width="101"/>
        <Label Content="Date &#xD;&#xA;Naissance" HorizontalAlignment="Left" Height="43" Margin="22,133,0,0" VerticalAlignment="Top" Width="81" RenderTransformOrigin="0.634,-2.767"/>
        <Label Content="Age" HorizontalAlignment="Left" Height="27" Margin="22,190,0,0" VerticalAlignment="Top" Width="81" RenderTransformOrigin="0.634,-2.767"/>
        <TextBox Text="{Binding Age,Mode=OneWay, Converter={StaticResource AgeConverter} }"  HorizontalAlignment="Left" Height="26" Margin="108,190,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="171"/>
        <ListBox Name="LPersonne" HorizontalAlignment="Left" Height="269" Margin="400,59,0,0" VerticalAlignment="Top" Width="291"/>

    </Grid>

</Window>
